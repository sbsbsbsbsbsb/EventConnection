<storeApps:VisualStateAwarePage
    x:Class="EventConnection.Pages.Rating_Common"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EventConnection.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ratingControl="using:JISoft.RatingControl"
    mc:Ignorable="d"
    Background="#ded6bf"
    xmlns:mvvm="using:Microsoft.Practices.Prism.Mvvm"
    xmlns:controls="using:EventConnection.Controls"
    xmlns:storeApps="using:Microsoft.Practices.Prism.StoreApps"
    mvvm:ViewModelLocator.AutoWireViewModel="true">

    <Grid x:Name="LayoutRoot">

        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Image Grid.ColumnSpan="3" Source="../Resources/EventConnection_top.png"></Image>

        <Grid Grid.Column="1" Grid.Row="1" >
            <Grid.RowDefinitions>
                <RowDefinition Height="6*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <ScrollViewer Grid.Row="0" HorizontalScrollBarVisibility="Disabled" HorizontalScrollMode="Disabled" VerticalScrollBarVisibility="Hidden" VerticalScrollMode="Enabled">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" TextWrapping="Wrap" Style="{ThemeResource GroupHeaderTextBlockStyle}"  Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Top" Padding="7,0" TextAlignment="Center">
                Шаг 1 из 5
                    </TextBlock>
                    <TextBlock Grid.Row="1" TextWrapping="Wrap" Style="{ThemeResource GroupHeaderTextBlockStyle}"  Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="7,0" TextAlignment="Center" FontWeight="SemiBold" Margin="0, 30">
                Пожалуйста, заполните анкету. Это необходимо для участия в розыгрыше ценного подарка.
                    </TextBlock>
                    <TextBlock Grid.Row="3" TextWrapping="Wrap" Style="{ThemeResource GroupHeaderTextBlockStyle}"  Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="7,0" TextAlignment="Center">
                Место проведения, оборудование, питание
                    </TextBlock>
                    <ratingControl:Rating Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Center"   
                AllowSelectingZero="True" ReadOnly="False"  
                RatingItemCount="5" Value="{Binding  Path=Model.PlaceReview, 
                        Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MinHeight="50" Background="Transparent">
                        <ratingControl:Rating.FilledItemStyle>
                            <Style TargetType="ratingControl:RatingItem">
                                <Setter Property="Background" Value="Goldenrod"/>
                            </Style>
                        </ratingControl:Rating.FilledItemStyle>
                        <ratingControl:Rating.UnfilledItemStyle>
                            <Style TargetType="ratingControl:RatingItem">
                                <Setter Property="Background" Value="LightGray"/>
                            </Style>
                        </ratingControl:Rating.UnfilledItemStyle>
                    </ratingControl:Rating>
                    <TextBlock Grid.Row="5" TextWrapping="Wrap" Style="{ThemeResource GroupHeaderTextBlockStyle}"  Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="7,0" TextAlignment="Center">
                Процесс регистрации
                    </TextBlock>
                    <ratingControl:Rating Grid.Row="6" HorizontalAlignment="Center" VerticalAlignment="Center"   
                AllowSelectingZero="True" ReadOnly="False"  
                RatingItemCount="5" Value="{Binding  Path=Model.RegistrationProcessReview, 
                        Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MinHeight="50" Background="Transparent">
                        <ratingControl:Rating.FilledItemStyle>
                            <Style TargetType="ratingControl:RatingItem">
                                <Setter Property="Background" Value="Goldenrod"/>
                            </Style>
                        </ratingControl:Rating.FilledItemStyle>
                        <ratingControl:Rating.UnfilledItemStyle>
                            <Style TargetType="ratingControl:RatingItem">
                                <Setter Property="Background" Value="LightGray"/>
                            </Style>
                        </ratingControl:Rating.UnfilledItemStyle>
                    </ratingControl:Rating>
                    <TextBlock Grid.Row="7" TextWrapping="Wrap" Style="{ThemeResource GroupHeaderTextBlockStyle}"  Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="7,0" TextAlignment="Center">
                Работа организаторов
                    </TextBlock>
                    <ratingControl:Rating Grid.Row="8" HorizontalAlignment="Center" VerticalAlignment="Center"   
                AllowSelectingZero="True" ReadOnly="False"  
                RatingItemCount="5" Value="{Binding  Path=Model.OrganisatorssWorkReview, 
                        Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MinHeight="50" Background="Transparent">
                        <ratingControl:Rating.FilledItemStyle>
                            <Style TargetType="ratingControl:RatingItem">
                                <Setter Property="Background" Value="Goldenrod"/>
                            </Style>
                        </ratingControl:Rating.FilledItemStyle>
                        <ratingControl:Rating.UnfilledItemStyle>
                            <Style TargetType="ratingControl:RatingItem">
                                <Setter Property="Background" Value="LightGray"/>
                            </Style>
                        </ratingControl:Rating.UnfilledItemStyle>
                    </ratingControl:Rating>
                    <TextBlock Grid.Row="9" TextWrapping="Wrap" Style="{ThemeResource GroupHeaderTextBlockStyle}"  Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="7,0" TextAlignment="Center">
                Актуальность рассматриваемых тем
                    </TextBlock>
                    <ratingControl:Rating Grid.Row="10" HorizontalAlignment="Center" VerticalAlignment="Center"   
                AllowSelectingZero="True" ReadOnly="False"  
                RatingItemCount="5" Value="{Binding  Path=Model.RelevanceReview, 
                        Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MinHeight="50" Background="Transparent">
                        <ratingControl:Rating.FilledItemStyle>
                            <Style TargetType="ratingControl:RatingItem">
                                <Setter Property="Background" Value="Goldenrod"/>
                            </Style>
                        </ratingControl:Rating.FilledItemStyle>
                        <ratingControl:Rating.UnfilledItemStyle>
                            <Style TargetType="ratingControl:RatingItem">
                                <Setter Property="Background" Value="LightGray"/>
                            </Style>
                        </ratingControl:Rating.UnfilledItemStyle>
                    </ratingControl:Rating>
                </Grid>
            </ScrollViewer>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button x:ConnectionId='1' Grid.Column="0" Padding="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"                        BorderBrush="Transparent" Margin="0">
                    <Grid HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="4*" />
                        </Grid.ColumnDefinitions>
                        <Image Source="../Resources/Pix_Back.png"></Image>
                        <TextBlock Grid.Column="1" Foreground="Black" Style="{ThemeResource GroupHeaderTextBlockStyle}" HorizontalAlignment="Left" Margin="10 0" VerticalAlignment="Center" FontFamily="Segoe WP SemiLight" FontWeight="Bold">Назад</TextBlock>
                    </Grid>
                </Button>
                <Button x:ConnectionId='2' Grid.Column="1" Padding="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"                        BorderBrush="Transparent">
                    <Grid HorizontalAlignment="Stretch" Width="140">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Foreground="Black" Style="{ThemeResource GroupHeaderTextBlockStyle}" HorizontalAlignment="Right" Margin="10 0" VerticalAlignment="Center" FontFamily="Segoe WP SemiLight" FontWeight="Bold">Вперед</TextBlock>
                        <Image Grid.Column="1" Source="../Resources/Pix_Next.png"></Image>
                    </Grid>
                </Button>
            </Grid>
        </Grid>
        
        <controls:MenuControl Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" ExpliciteChatLock="False" ExpliciteEventsLock="False" ExpliciteReviewLock="True" />
    </Grid>
</storeApps:VisualStateAwarePage>

